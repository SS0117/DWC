<h2>New book</h2>

<%= form_with model:@new_book do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <br>
    <%= f.text_area :body %>
  </div>

  <div class="action">
    <%= f.submit "Create Book" %>
  </div>
<% end %>