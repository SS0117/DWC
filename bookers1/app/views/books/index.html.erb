<%= flash[:notice] %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= book.title %>
        </td>

        <td>
          <%= book.body %>
        </td>

        <td>
          <%= link_to "Show", book_path(book.id) %>
        </td>

        <td>
          <%= link_to "Edit", edit_book_path(book.id) %>
        </td>

        <td>
          <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>

<% if @new_book.errors.any? %>
  <% if @new_book.errors.count==1 %>
    <%= @new_book.errors.count %> error prohibited this book from being saved:
  <% else %>
    <%= @new_book.errors.count %> errors prohibited this book from being saved:
  <% end %>
  <ul>
    <% @new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model:@new_book do |f| %>
  <div class="field">
    <label for="book_title">Title</label>
    <br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <br>
    <%= f.text_area :body %>
  </div>

  <div class="action">
    <%= f.submit "Create Book" %>
  </div>
<% end %>